<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>

    </style>

    <style name="MyButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="shapeAppearance">@style/corner</item>
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange3</item>
        <item name="android:textSize">16sp</item>
    </style>

  
    <style name="corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:itemTextAppearance">@style/MyMenuItemTextAppearance</item>
        <item name="actionMenuTextColor">@color/menu_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">25%</item>
    </style>

    <style name="MyMenuItemTextAppearance"></style>



        <!-- Your existing styles -->

        <style name="MyTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
            <item name="android:backgroundTint">@android:color/white</item>
            <item name="boxBackgroundColor">@android:color/white</item>
            <item name="boxStrokeColor">#00BCD4</item>
            <item name="boxStrokeWidth">2dp</item>
            <item name="android:textSize">18sp</item>
            <!-- Add any other attributes you need for your EditText here -->
        </style>

        <style name="RoundedSquare">
            <item name="cornerSize">10dp</item>
        </style>






</resources>